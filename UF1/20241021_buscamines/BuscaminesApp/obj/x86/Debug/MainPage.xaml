<Page x:ConnectionId='1'
    x:Class="BuscaminesApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BuscaminesApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:view="using:BuscaminesApp.View"
    mc:Ignorable="d"
                        
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid ColumnSpacing="10" 
          RowSpacing="10" 
          Padding="10" 
          Background="LightGray"
          BorderBrush="White"
          BorderThickness="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="000"></TextBlock>
        <Image Grid.Column="1" Grid.Row="0" Width="60" Height="60" Source="/Assets/face.png" />
        <TextBlock Grid.Column="2" Grid.Row="0" Text="999"></TextBlock>


        <view:UIBoard  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"></view:UIBoard>
    </Grid>
</Page>


<Page x:ConnectionId='1'
    x:Class="BuscaminesApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BuscaminesApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:view="using:BuscaminesApp.View"
    mc:Ignorable="d"
                        
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid
        Background="LightGray">
    <Grid ColumnSpacing="10" 
          RowSpacing="10" 
          Padding="10" 
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Background="LightGray"
          BorderBrush="White"
          BorderThickness="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" 
                Background="Black">
            <TextBlock Text="{Binding ElementName=board, Path=MarkedMinesNumber,FallbackValue=000}" Foreground="red"
                       FontSize="50"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Digital-7 Mono"
                       ></TextBlock>
        </Border>
        <Image Grid.Column="1" Grid.Row="0" Width="60" Height="60" Source="/Assets/face.png" />
        <Border Grid.Column="2" Grid.Row="0" 
                Background="Black">
            <TextBlock Text="000" Foreground="red"
                       FontSize="50"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Digital-7 Mono"
                       ></TextBlock>
        </Border>


        <view:UIBoard x:ConnectionId='2' x:Name="board" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"></view:UIBoard>
    </Grid>
    </Grid>
</Page>

